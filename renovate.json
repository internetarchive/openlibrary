{
  "extends": [
    "config:recommended"
  ],
  "git-submodules": {
    "enabled": true
  },
  "pip_requirements": {
    "fileMatch": [
      "(^|/)requirements[^/]*\\.txt$"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "eslint",
        "@babel/eslint-parser",
        "eslint-plugin-no-jquery",
        "eslint-plugin-vue"
      ],
      "groupName": "eslint",
      "automerge": false
    },
    {
      "matchPackageNames": [
        "jest",
        "bundlesize2",
        "sinon",
        "stylelint",
        "stylelint-declaration-strict-value",
        "stylelint-prettier",
        "prettier",
        "postcss-less"
      ],
      "automerge": false
    },
    {
      "automerge": false,
      "matchPackageNames": [
        "mypy",
        "pytest",
        "pytest-asyncio",
        "ruff",
        "safety"
      ]
    },
    {
      "automerge": false,
      "matchPackageNames": [
        "/^actions//"
      ]
    }
  ]
}
